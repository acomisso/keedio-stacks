# Required-Stop: $local_fs $remote_fs $network
# Short-Description: start and stop ES dumper 4
# Description: The esdumper is a dashboard for ElasticSearch
### END INIT INFO


export HADOOP_CONF_DIR=/etc/hadoop/conf
PATH=/sbin:/usr/sbin:/bin:/usr/bin:/usr/lib/esdumper/bin
DESC="ES dumper "
NAME=esdumper
DAEMON=./run.sh
DAEMON_ARGS=""
PIDFILE=/var/run/$NAME.pid
SCRIPTNAME=/etc/init.d/$NAME
LOG=/var/log/esdumper.log
RETVAL=0

pid_file_exists() {
    [ -f "$PIDFILE" ]
}

do_start()      {

        if pid_file_exists
        then
                        echo "ES dumper is already running"
                        return 1
        else
                        cd '/opt/keedio-examples/bankmovements-demo/sparkstreamingvectodemo'
                        $DAEMON $DAEMON_ARGS 1>"$LOG" 2>&1 &
                        PID=$!
                        echo $PID > "$PIDFILE"

                        if [ "$PID" > 0 ]
                        then
                                echo "ES dumper  started with pid $!"
                                return 0
                        else
                                echo "ES dumper  could not be started"
                                return 1
                        fi
        fi


}


do_status() {
        if pid_file_exists
        then
                PID=$(cat $PIDFILE)
                STATUS=$(ps ax | grep $PID | grep -v grep | awk '{print $1}')

                if [ "$STATUS" == "$PID" ]
                then
                                echo "ES dumper  is running on proccess $PID"
                                return 0
                else
                                echo "ES dumper  is NOT running"
                                #rm $PIDFILE
                                return 1
                fi
        else
                echo "ES dumper  is NOT running"
                return 3
        fi
}

do_stop() {
        if pid_file_exists
        then
                PID=$(cat $PIDFILE)
                STATUS=$(ps ax | grep $PID | grep -v grep | awk '{print $1}')

                if [ "$STATUS" == "$PID" ]
                then
                                echo "Killing ES dumper ...."
                                KILL=$(kill -15 $PID)
                                rm $PIDFILE
                                sleep 1
                                echo -e "\tES dumper  (PID:$PID) killed"
                                return 0

                else
                                echo "ES dumper  is NOT running"
                                rm $PIDFILE
                                return 1
                fi
        else
                echo "ES dumper  is NOT running"
                 return 0
        fi
}


case "$1" in
  start)
        do_start
        RETVAL=$?
        ;;
  stop)
        do_stop
        RETVAL=$?
        ;;
  status)
        do_status
        RETVAL=$?
        ;;
  restart)
        do_stop
        do_start
        RETVAL=$?
        ;;
  *)
        echo "Usage: $SCRIPTNAME {start|stop|status|restart}" >&2
        exit 2
        ;;
esac

exit $RETVAL
