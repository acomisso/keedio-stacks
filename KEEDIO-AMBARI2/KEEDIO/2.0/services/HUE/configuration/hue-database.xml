<configuration>
  <property>
    <name>db_type</name>
    <value></value>
    <description>Hue DB  type, allowed values are mysql, postgresql_psycopg2, oracle</description>
  </property>
  <property>
    <name>db_host</name>
    <value></value>
    <description>Hue DB  server</description>
  </property>
  <property>
    <name>db_port</name>
    <value>default</value>
    <description>Hue DB port, default specifies the default port for the different database type.</description>
  </property>
  <property>
    <name>db_name</name>
    <value>hue</value>
    <description>DB Name</description>
  </property>
  <property>
    <name>db_user</name>
    <value>hue</value>
    <description>Hue DB user</description>
  </property>
  <property>
    <name>db_password</name>
    <value>hue</value>
    <property-type>PASSWORD</property-type>
    <description>Hue DB password</description>
  </property>
  <property>
    <name>oracle_home</name>
    <value>none</value>
    <description>Oracle path, necessary if you are using oracle as backend DB. </description>
  </property>
  </configuration>
