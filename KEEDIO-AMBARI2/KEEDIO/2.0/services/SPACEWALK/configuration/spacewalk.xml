<configuration>
  <property>
    <name>spacewalk_server</name>
    <value>https://repo.keedio.com/XMLRPC</value>
    <description>Spacewalk server</description>
  </property>
  <property>
    <name>activation_key</name>
    <value></value>
    <property-type>PASSWORD</property-type>
    <description>This is the key to subscribe to the spacewalk server
    </description>
    <value-attributes>
       <type>string</type>
    </value-attributes>
  </property>
  <property>
    <name>spacewalk_certificate</name>
    <value>http://repo.keedio.com/pub/rhn-org-trusted-ssl-cert-1.0-2.noarch.rpm</value>
    <description>Certificate for encrypted communication with the server</description>
  </property>
  <property>
    <name>spacewalk_pub_url</name>
    <value>http://repo.keedio.com/pub/spacewalk-client-el7</value>
    <description>Spacewalk public repository url</description>
  </property>
  <property>
    <name>gpgcheck</name>
    <value>false</value>
    <description>Checks gpg signatures</description>
    <value-attributes>
       <type>boolean</type>
    </value-attributes>
  </property>
  <property>
    <name>spacewalk_timeout</name>
    <value>120</value>
    <description>Timeout for spacewalk in seconds</description>
    <value-attributes>
      <unit>Secs</unit>
      <overridable>false</overridable>
      <minimum>64</minimum>
      <maximum>600</maximum>
      <increment-step>30</increment-step>
      <type>int</type>
    </value-attributes> 
  </property>

</configuration>
