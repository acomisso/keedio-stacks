{
  "KAFKA_MANAGER": {
    "service": [],
    "KAFKA_MANAGER_SERVER": [
      {
        "name": "kafka_manager_process",
        "label": "Kafka Manager Process",
        "description": "This host-level alert is triggered if the Kafka Manager cannot be determined to be up.",
        "interval": 1,
        "scope": "HOST",
        "source": {
          "type": "PORT",
          "uri": "{{kafka-manager/port}}",
          "default_port": 9000,
          "reporting": {
            "ok": {
              "text": "TCP OK - {0:.3f}s response on port {1}"
            },
            "warning": {
              "text": "TCP OK - {0:.3f}s response on port {1}",
              "value": 1.5
            },
            "critical": {
              "text": "Connection failed: {0} to {1}:{2}",
              "value": 5.0
            }
          }
        }
      }
    ]
  }
}
