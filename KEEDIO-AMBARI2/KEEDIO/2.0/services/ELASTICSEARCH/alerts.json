{
  "ELASTICSEARCH": {
    "service": [],
    "ELASTICSEARCH": [
      {
        "name": "elasticsearch_port",
        "label": "Elastocsearch port",
        "description": "This host-level alert is triggered if the Elastocsearch is unreachable.",
        "interval": 1,
        "scope": "ANY",
        "source": {
          "type": "WEB",
          "uri": {
              "http": "{{elasticsearch/elasticsearch_port}}",
              "https": "{{elasticsearch/elasticsearch_port}}",
              "connection_timeout": 5.0,
              "default_port": 9200
          },
          "reporting": {
              "ok": {
                  "text": "HTTP {0} response in {2:.3f}s"
              },
              "warning":{
                  "text": "HTTP {0} response from {1} in {2:.3f}s ({3})"
              },
              "critical": {
                  "text": "Connection failed to {1} ({3})"
              }
          }
        }
      }
    ]
  }
}
