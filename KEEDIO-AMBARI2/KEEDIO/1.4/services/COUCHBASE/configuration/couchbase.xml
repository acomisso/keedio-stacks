<configuration>
  <property>
    <name>username</name>
    <value>admin</value>
    <description>Couchbase Administrator </description>
  </property>
  <property>
    <name>password</name>
    <value>cbadmin</value>
    <description>Couchbase Admin password, minimum 6 characters </description>
  </property>
  <property>
    <name>datadir</name>
    <value>/couchbase/data</value>
    <description>Disk for keeping data</description>
  </property>
  <property>
    <name>indexdir</name>
    <value>/couchbase/index</value>
    <description>Disk for keeping indexes</description>
  </property>
  <property>
    <name>dataram</name>
    <value>500</value>
    <description>Memory reserved for data caching</description>
  </property>
  <property>
    <name>indexram</name>
    <value>500</value>
    <description>Memory reserved for index caching</description>
  </property>
  <property>
    <name>usemoi</name>
    <value>true</value>
    <description>Use memory optimised indexes</description>
  </property>
</configuration>
