<configuration>
  <property>
    <name>zeppelin_port</name>
    <value>8044</value>
    <description>Port where zeppelin will listen</description>
  </property>
  <property>
    <name>zeppelin_notebook_dir</name>
    <value>notebook</value>
    <description>Porsistent storage for notebooks</description>
  </property>
  <property>
    <name>authentication</name>
    <value>internal</value>
    <description>Authentication for Zeppelin, it can be internal: Uses internal Free IPA as an LDAP server (Requires Free IPA service), ldap: connects to an external ldap server, ad: connects to active directory domain controller, manual: allows manual configuration ot the authentication, disabled: authentication is disabled </description>
  </property>
</configuration>
