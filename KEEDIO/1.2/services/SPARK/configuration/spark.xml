<configuration>
  <property>
    <name>spark_user</name>
    <value>spark</value>
    <property-type>USER</property-type>
    <description>User to submit spark jobs</description>
  </property>
  <property>
    <name>spark_group</name>
    <value>spark</value>
    <description>Spark's user group</description>
  </property>
  <property>
    <name>spark_home</name>
    <value>/user/spark</value>
    <description>Home path in HDFS. It will contains directory libs with jars and directory eventLogs</description>
  </property>
  <property>
    <name>spark_conf_dir</name>
    <value>/etc/spark/conf</value>
    <description>Path in local file system containing spark configurations</description>
  </property>
  <property>
    <name>spark_principal</name>
    <value>spark</value>
    <description></description>
  </property> 
  <property>
    <name>spark_keytab</name>
    <value>/PATH/TO/SPARK/KEYTAB</value>
    <description></description>
  </property>
  <property>
    <name>spark_yarn_lib_dir</name>
    <value>/usr/lib/spark/default/lib</value>
    <description>Path to dir in local file system containing spark yarn libs</description>
  </property>
  <property>
    <name>spark_assembly</name>
    <value>spark-assembly-1.3.1-hadoop2.2.0.jar</value>
  </property>
</configuration>
