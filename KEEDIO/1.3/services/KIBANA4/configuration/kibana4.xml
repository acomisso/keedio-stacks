<configuration>
  <property>
    <name>kibana_port</name>
    <value>5601</value>
    <description>Port where kibana will listen</description>
  </property>

  <property>
    <name>kibana_index</name>
    <value>.kibana</value>
    <description>Kibana uses an index in Elasticsearch to store saved searches, visualizations and dashboards. It will create a new index if it doesn't already exist.</description>
  </property>
</configuration>
